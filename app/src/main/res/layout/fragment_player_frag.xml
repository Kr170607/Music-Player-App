<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="24dp"
    tools:context=".Player_frag">

    <!-- Song Info at Top -->
    <LinearLayout
        android:id="@+id/songInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Song Title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playerArtistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Artist Name"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Rotating Disc Container -->
    <RelativeLayout
        android:id="@+id/discContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true">

        <!-- Outer Vinyl Disc -->
        <ImageView
            android:id="@+id/vinylDisc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/vinyl_disc" />

        <!-- Circular Song Image in Center -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="70dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/playerSongImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:transitionName="song_image_transition" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <!-- Custom Visualizer Bars -->
    <LinearLayout
        android:id="@+id/visualizerContainer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@id/controlsContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <View android:id="@+id/bar1" android:layout_width="4dp" android:layout_height="20dp" android:layout_margin="2dp" android:background="@color/accent_gold" />
        <View android:id="@+id/bar2" android:layout_width="4dp" android:layout_height="35dp" android:layout_margin="2dp" android:background="@color/accent_gold" />
        <View android:id="@+id/bar3" android:layout_width="4dp" android:layout_height="25dp" android:layout_margin="2dp" android:background="@color/accent_gold" />
        <View android:id="@+id/bar4" android:layout_width="4dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@color/accent_gold" />
        <View android:id="@+id/bar5" android:layout_width="4dp" android:layout_height="15dp" android:layout_margin="2dp" android:background="@color/accent_gold" />
    </LinearLayout>

    <!-- Controls at Bottom -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Liked Button placed above SeekBar but aligned to the end -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/btnPlayerLike"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/btn_star_big_off"
                app:tint="@color/white" />
        </RelativeLayout>

        <!-- SeekBar and Time -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/accent_gold"
            android:thumbTint="@color/accent_gold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="3:45"
                android:textColor="@android:color/darker_gray" />
        </RelativeLayout>

        <!-- Playback Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_previous"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/vinyl_disc"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_play"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_next"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>